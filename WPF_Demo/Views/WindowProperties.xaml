<Window x:Class="WPF_Demo.Views.WindowProperties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Demo.Views"
        mc:Ignorable="d"
        Title="WindowProperties" Height="450" Width="800">
    <UniformGrid Rows="3" Columns="1">
        <Button IsDefault="True" Click="Button_Click" Margin="10" FontSize="44">Create a new Window</Button>
        <Button IsCancel="True" Name="Close_Button" Click="Close_Click" Margin="10" FontSize="44">Close</Button>
        <Button Name="MessageBox_Button" Click="MessageBox_Click" Margin="10" FontSize="44">Message Box</Button>
    </UniformGrid>
</Window>
