        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Demo.Views.Commands.Custom"
        mc:Ignorable="d"
        Title="CustomCommand" Height="450" Width="800">
    <StackPanel>
        <TextBox x:Name="txtBox" Margin="10" Padding="10" FontSize="20" FontWeight="Bold" Background="Aqua" />
        <Button x:Name="ButtonReverse" Content="Reverse" HorizontalAlignment="Center" Padding="10" FontWeight="Bold" Margin="10" />
    </StackPanel>
</Window>
