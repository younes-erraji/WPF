<Window x:Class="WPF_Demo.Views.Threading.ThreadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Demo.Views.Threading"
        mc:Ignorable="d"
        Title="ThreadingWindow" Height="450" Width="800">
    <StackPanel>
        <ProgressBar Height="10" Name="DownloadProgress" Minimum="1" Maximum="100"></ProgressBar>
        <Button Margin="10" Padding="10, 5" Click="Button_Click">Start Downloading</Button>
        <TextBox Padding="10" Margin="10, 5" FontSize="20"></TextBox>
        <Label Name="LThreading" FontSize="20" HorizontalContentAlignment="Center"></Label>
    </StackPanel>
</Window>
