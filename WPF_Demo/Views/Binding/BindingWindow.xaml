<Window x:Class="WPF_Demo.Views.Binding.BindingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Demo.Views.Binding"
        mc:Ignorable="d"
        Title="BindingWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <Label Target="{Binding ElementName=firstName}">_First Name:</Label>
        <TextBox Name="firstName" />
        <Label Target="{Binding ElementName=lastName}">_Last Name:</Label>
        <TextBox Name="lastName" />
    </StackPanel>
</Window>
