<Window x:Class="WPF_Demo.Views.MarkupExtensions.MarkupExtensionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Demo.Views.MarkupExtensions"
        mc:Ignorable="d"
        Title="MarkupExtensionsWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Content="{local:ShowTime First}" Margin="5"></Button>
        <Button Grid.Column="1" Content="{local:ShowTime Header=Second}" Margin="5"></Button>

        <Button xml:space="preserve" Grid.Column="0" Grid.Row="1" Margin="5">Click             Me&apos;</Button>
    </Grid>
</Window>
