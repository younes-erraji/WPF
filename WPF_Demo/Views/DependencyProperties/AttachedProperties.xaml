<Window x:Class="WPF_Demo.Views.DependencyProperties.AttachedProperties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Demo.Views.DependencyProperties"
        mc:Ignorable="d"
        Title="AttachedProperties" Height="450" Width="800">
    <StackPanel>
        <DockPanel Height="200">
            <Button Padding="10" Height="40" DockPanel.Dock="Top">First Button</Button>
            <Button Padding="10" Height="40" DockPanel.Dock="Bottom">Third Button</Button>
        </DockPanel>
        <StackPanel>
            <TextBlock x:Name="firstTxt" Padding="5">First Holder</TextBlock>
            <TextBlock x:Name="secondTxt" Padding="5">Second Holder</TextBlock>
        </StackPanel>
    </StackPanel>
</Window>
