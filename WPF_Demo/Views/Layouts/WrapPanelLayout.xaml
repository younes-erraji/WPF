<Window x:Class="WPF_Demo.Views.Layouts.WrapPanelLayout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Demo.Views.Layouts"
        mc:Ignorable="d"
        Title="WrapPanel" Height="280" Width="820">
    <WrapPanel Margin="10" ItemHeight="200">
        <Button Margin="10" Padding="10" Width="140" VerticalAlignment="Top">Top</Button>
        <Button Margin="10" Padding="10" MinHeight="100" Width="140">Tall</Button>
        <Button Margin="10" Padding="10" Width="140" VerticalAlignment="Center">Centered</Button>
        <Button Margin="10" Padding="10" Width="140">Stretch</Button>
        <Button Margin="10" Padding="10" Width="140" VerticalAlignment="Bottom">Bottom</Button>
    </WrapPanel>
</Window>
