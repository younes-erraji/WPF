<Window x:Class="WPF_Demo.Views.Controls.ContextMenus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Demo.Views.Controls"
        mc:Ignorable="d"
        Title="ContextMenus" Height="450" Width="800">
    <Grid>
        <Image Source="Assets/Images/Photoshop.PNG" Name="image">
            <Image.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Original" Click="Original_Click" />
                    <MenuItem Header="Flip on V Axis" Click="FlipVertical_Click" />
                    <MenuItem Header="Flip on H Axis" Click="FlipHorizontal_Click" />
                </ContextMenu>
            </Image.ContextMenu>
        </Image>
    </Grid>
</Window>
