<Window x:Class="WPF_Demo.Views.Controls.ToolTipsControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Demo.Views.Controls"
        mc:Ignorable="d"
        Title="ToolTipsControl" Height="450" Width="800">
    <StackPanel>
        <Button ToolTip="Button" Margin="20, 20, 20, 10">Button</Button>
        <ComboBox ToolTip="Color" SelectedIndex="-1" Margin="20, 10, 20, 20">
            <ComboBoxItem ToolTip="Black">Black</ComboBoxItem>
            <ComboBoxItem ToolTip="Red">Red</ComboBoxItem>
            <ComboBoxItem ToolTip="White">White</ComboBoxItem>
            <ComboBoxItem ToolTip="Green">Green</ComboBoxItem>
        </ComboBox>
    </StackPanel>
</Window>
