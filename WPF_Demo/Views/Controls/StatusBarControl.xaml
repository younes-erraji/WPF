<Window x:Class="WPF_Demo.Views.Controls.StatusBarControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Demo.Views.Controls"
        mc:Ignorable="d"
        Title="StatusBarControl" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="False">
            <StatusBar DockPanel.Dock="Bottom">
                <TextBlock Margin="20, 0">Progress</TextBlock>
                <ProgressBar Height="20" Width="100" Value="67" />
            </StatusBar>
        </DockPanel>
    </Grid>
</Window>
